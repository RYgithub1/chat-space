.side-bar
  .side-bar__user-name
    .side-bar__user-name__side-box
      %p.boxname
        -# masa
        = current_user.name
      %ul.menu
        %li
          = link_to "", new_group_path, class:"editx far fa-edit"
        %li
          = link_to "", edit_user_path(current_user), class:"cogx fa fa-cog"
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "linkx" do
          .own-group
            = group.name
          .own-message
            = group.show_last_message
